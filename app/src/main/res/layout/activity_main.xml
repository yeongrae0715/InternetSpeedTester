<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/titleSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    address -->
    <TextView
        android:id="@+id/labelAddress"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Address : "
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleSetting"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="192.168.0.196"
        android:gravity="center_horizontal"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/labelAddress"
        app:layout_constraintTop_toTopOf="@id/labelAddress"/>

<!--    port -->
    <TextView
        android:id="@+id/labelPort"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Port : "
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelAddress"/>

    <EditText
        android:id="@+id/port"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="10081"
        android:gravity="center_horizontal"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/labelPort"
        app:layout_constraintTop_toTopOf="@id/labelPort"/>



    <!--    count -->
    <TextView
        android:id="@+id/labelCount"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Count : "
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelPort"/>

    <EditText
        android:id="@+id/count"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="100"
        android:gravity="center_horizontal"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/labelCount"
        app:layout_constraintTop_toTopOf="@id/labelCount"/>

<!--    <TextView-->
<!--        android:id="@+id/labelProcess"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="process"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/labelCurrent"/>-->

    <TextView
        android:id="@+id/labelCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnStart"/>

<!--    start button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStart"
        android:text="start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>